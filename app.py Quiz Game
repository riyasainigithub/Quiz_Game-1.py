print('Welcome to my computer quiz!')

playing = input('Do you want to play? ')

if playing.lower() != 'yes':
    quit()

print("Okay! let's play :)")
score = 0

answer = input("What does CPU stand for? ")
if answer.lower() == "central processing unit":
    print('Correct!')
    score += 1
else:
    print("Incorrect!")

answer = input("What does GPU stands for? ")
if answer.lower() == "graphics processing unit":
    print('Correct!')
    score += 1
else:
    print("Incorrect!")

answer = input("The first page of website is known as? ")
if answer.lower() == "homepage":
    print('Correct!')
    score += 1
else:
    print("Incorrect!")

answer = input("The first web browser is? ")
if answer.lower() == "mosaic":
    print('Correct!')
    score += 1
else:
    print("Incorrect!")

answer = input("Full form of NOS? ")
if answer.lower() == "network operating system":
    print('Correct!')
    score += 1
else:
    print("Incorrect!")

answer = input("Help menu is located at which button? ")
if answer.lower() == "start":
    print('Correct!')
    score += 1
else:
    print("Incorrect!")

print("You got " + str(score) + " questions correct!")
print("You got " + str((score/6) * 100) + "%.")